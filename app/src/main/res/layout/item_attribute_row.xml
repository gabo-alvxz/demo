<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/pd_8"
    android:paddingBottom="@dimen/pd_8"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/body_medium_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/separator"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/attribute_title"
        tools:text="Attributee"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/separator"
        app:layout_constraintGuide_percent="0.6"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/text_big"
        tools:text="value"
        app:layout_constraintStart_toEndOf="@id/separator"
        android:textAppearance="@style/body_medium"
        android:id="@+id/attribute_value"/>








</androidx.constraintlayout.widget.ConstraintLayout>