<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >



        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/no_results_imagee"
            android:src="@drawable/ic_desert"
            app:layout_constraintBottom_toTopOf="@id/no_results_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            />


    <TextView
        android:id="@+id/no_results_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_results_title"
        android:textAppearance="@style/heading_small_light"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toBottomOf="@id/no_results_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/no_results_imagee" />

    <TextView
        android:id="@+id/no_results_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_results_message"
        android:textAppearance="@style/body_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/no_results_title"
        app:layout_constraintVertical_chainStyle="packed" />




</androidx.constraintlayout.widget.ConstraintLayout>