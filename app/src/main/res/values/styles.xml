<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="button_base" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAppearance">@style/body_medium_bold</item>
        <item name="android:ellipsize">none</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:focusable">true</item>
    </style>
    <style name="button_secondary_round" parent="button_base">
        <item name="android:background">@drawable/button_secondary_background_round</item>
        <item name="android:textColor" >@color/grey_800</item>
    </style>
    <style name="button_primary_round" parent="button_base">
        <item name="android:background">@drawable/button_primary_background_round</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="appbar_theme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:gravity">center</item>
        <item name="android:background">@color/background</item>
        <item name="iconTint">@color/black</item>
        <item name="iconTintMode">src_in</item>
    </style>
</resources>